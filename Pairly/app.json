{
  "expo": {
    "name": "Pairly",
    "slug": "pairly",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "pairly",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/PairlyLogo.png",
      "backgroundColor": "#FFFFFF",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pairly.app",
      "icon": "./assets/icon.png"
    },
    "android": {
      "package": "com.pairly.app",
      "versionCode": 3,
      "compileSdkVersion": 34,
      "targetSdkVersion": 34,
      "buildToolsVersion": "34.0.0",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.RECORD_AUDIO",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.WAKE_LOCK",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.USE_EXACT_ALARM",
        "com.google.android.c2dm.permission.RECEIVE"
      ],
      "googleServicesFile": "./google-services.json",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "pairly"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Pairly to access your photos to share moments with your partner.",
          "cameraPermission": "Allow Pairly to access your camera to capture moments."
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "color": "#FF6B9D",
          "mode": "production"
        }
      ],
      "./plugins/withAndroidWidget"
    ],
    "extra": {
      "eas": {
        "projectId": "323693d7-995a-4dd2-ba1d-5569c263d4c8"
      },
      "apiUrl": "https://pairly-60qj.onrender.com",
      "socketUrl": "https://pairly-60qj.onrender.com"
    }
  }
}