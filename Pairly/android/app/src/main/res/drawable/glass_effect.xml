<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ¨ Glassmorphism Effect - Premium iOS Style -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glass Background with Blur Effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <gradient
                android:angle="135"
                android:startColor="#E6FFFFFF"
                android:centerColor="#CCFFFFFF"
                android:endColor="#B3FFFFFF"
                android:type="linear"/>
        </shape>
    </item>
    
    <!-- Subtle White Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <stroke android:width="1.5dp" android:color="#40FFFFFF"/>
        </shape>
    </item>
</layer-list>
