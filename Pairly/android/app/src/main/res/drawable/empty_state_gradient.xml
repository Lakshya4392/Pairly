<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ¨ Empty State Gradient - Glassmorphic Pink -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <gradient
                android:angle="135"
                android:startColor="#FFFF6B9D"
                android:centerColor="#FFFF8FB3"
                android:endColor="#FFFFB3CC"
                android:type="linear"/>
        </shape>
    </item>
    
    <!-- Glass Overlay -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <solid android:color="#15FFFFFF"/>
        </shape>
    </item>
</layer-list>
