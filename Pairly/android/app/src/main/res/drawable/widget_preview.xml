<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFF8FB"
                android:endColor="#FFEEF6"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#FFE1F0" />
        </shape>
    </item>
    
    <!-- Sample Photo Area -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="40dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFE8F3"
                android:endColor="#FFD1E8"
                android:angle="45" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Heart Icon -->
    <item android:top="16dp" android:right="16dp" android:width="24dp" android:height="24dp">
        <shape android:shape="oval">
            <solid android:color="#FF6DAE" />
        </shape>
    </item>
    
    <!-- Bottom Info Bar -->
    <item android:bottom="8dp" android:left="8dp" android:right="8dp" android:height="32dp">
        <shape android:shape="rectangle">
            <solid android:color="#F0FFFFFF" />
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" />
        </shape>
    </item>
    
</layer-list>