<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Main Image (shows moment or placeholder) -->
    <ImageView
        android:id="@+id/widget_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="Latest Moment" />

    <!-- Title at top -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Pairly"
        android:textColor="#FF6B9D"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#80FFFFFF"
        android:padding="4dp"
        android:layout_margin="8dp" />

    <!-- Bottom text overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#80000000"
        android:padding="8dp">

        <TextView
            android:id="@+id/widget_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share a Moment"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/widget_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to capture &amp; send"
            android:textColor="#CCCCCC"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/widget_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready to connect"
            android:textColor="#AAAAAA"
            android:textSize="10sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</RelativeLayout>
