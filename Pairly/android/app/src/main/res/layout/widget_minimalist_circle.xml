<?xml version="1.0" encoding="utf-8"?>
<!-- Widget Style 2: Minimalist Circle -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/widget_background_minimal">

    <!-- Circular Photo Container -->
    <FrameLayout
        android:id="@+id/circle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/widget_partner_name"
        android:layout_marginBottom="12dp">

        <!-- Circular Photo -->
        <ImageView
            android:id="@+id/widget_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Partner photo"
            android:background="@drawable/circle_shape"
            android:visibility="gone"/>

        <!-- Empty Circle -->
        <FrameLayout
            android:id="@+id/widget_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_empty_gradient">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_camera_outline"
                    android:tint="#4A90E2"
                    android:alpha="0.7"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting for\nfirst moment"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <!-- Partner Name -->
    <TextView
        android:id="@+id/widget_partner_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Partner"
        android:textSize="14sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"/>

</RelativeLayout>
