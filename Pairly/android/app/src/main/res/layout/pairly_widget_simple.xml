<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Card Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/widget_card_bg"
        android:padding="12dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’• Pairly"
                android:textColor="#FF6B9D"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready"
                android:textColor="#888888"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/widget_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/widget_placeholder" />

            <!-- Overlay for text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#88000000"
                android:padding="8dp">

                <TextView
                    android:id="@+id/widget_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share a Moment"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_sub_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to capture"
                    android:textColor="#CCCCCC"
                    android:textSize="11sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>