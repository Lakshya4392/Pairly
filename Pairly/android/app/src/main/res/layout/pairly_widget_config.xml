<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF8FB">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pairly Widget Setup"
            android:textSize="20sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep your partner's latest moment always visible on your home screen."
        android:textSize="16sp"
        android:textColor="#666666"
        android:lineSpacing="4dp"
        android:layout_marginBottom="32dp" />

    <!-- Widget Size Options -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Widget Size"
        android:textSize="14sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <RadioGroup
        android:id="@+id/size_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/size_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small (2x2) - Photo only"
            android:textSize="14sp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/size_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium (3x2) - Photo with info"
            android:textSize="14sp"
            android:padding="8dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/size_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Large (4x3) - Full experience"
            android:textSize="14sp"
            android:padding="8dp" />

    </RadioGroup>

    <!-- Update Frequency -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Frequency"
        android:textSize="14sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:id="@+id/update_frequency"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/spinner_background" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="auto">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#666666"
            android:background="@drawable/button_outline"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="24dp" />

        <Button
            android:id="@+id/add_widget_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Widget"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

</LinearLayout>